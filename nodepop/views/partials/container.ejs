<div class="container">
    
        <h1 class="page-header"> <%= title %> :</h1>
        <section class="item-list clearfix">
            
            
            
            <% include item %>
                  
    
            <div class="text-center alone">
                
                <% var totalPage= Math.ceil(totalRecords / limit);%>

                <ul class="pagination">
                <% for (let i=1; i<=totalPage; i++){%>
                    <li class="<% if(page==i){ %>disabled <%}%>" ><a href="/?page=<%=i%>&limit=<%=limit%>"><%=i%></a></li>
                <%}%>
                </ul>
            </div>
    
        </section>
    </div>