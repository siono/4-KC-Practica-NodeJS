<div class="container">
    
    <h1 class="page-header"> <%= title %> :</h1>
    
    <section class="item-list clearfix">

    <!-- Incluimos los items -->        
    <% include item %>
                  
    <!-- Paginacion : si el nÃºmero de elmentos a mostrar es igual o menor al limite de elemnetos no se muestra paginaciÃ³n-->
    <% if(totalPage > 1){ %>

        <div class="text-center alone">
        
            <ul class="pagination">
            <% for (let i=1; i<=totalPage; i++){%>
                <li class="<% if(filters.page==i){ %>disabled<%}%>" ><a href="/?page=<%=i%><%if(filters!=""){%>&<%=filters%><%}%>vav"><%=i%></a></li>
            <%}%>
                
            </ul>

        </div>
    <%}%>
    </section>
</div>